<Window x:Class="extrac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Song Extractor" Height="200" Width="400">
    <Grid>
        <Button Content="Select CSV File" Click="SelectCsvFile_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock Name="FilePathTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <TextBox Name="FileNameTextBox"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <Button Content="Extract Random Songs" Click="ExtractRandomSongs_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,140,0,0"/>
    </Grid>
</Window>
